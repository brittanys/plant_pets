<p id="notice"><%= notice %></p>

<h1>Plant Pets
  <img src='/assets/plant.png' height='50' width='50' />
</h1>

<table id='plants'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Water</th>
      <th>Needs Water?</th>
      <th>Fed</th>
      <th>Needs Food?</th>
      <th>Age</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @plants.each do |plant| %>
      <tr>
        <td><%= plant.name %></td>
        <td><%= plant.water_amount %></td>
        <td><%= plant.needs_water?%></td>
        <td><%= plant.fed_amount %></td>
        <td><%= plant.needs_food? %></td>
        <td><%= plant.age %></td>
        <td><%= link_to 'Show', plant %></td>
        <td><%= link_to 'Edit', edit_plant_path(plant) %></td>
        <td><%= link_to 'Destroy', plant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Plant', new_plant_path %>
